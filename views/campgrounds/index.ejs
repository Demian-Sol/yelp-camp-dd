<% include ../partials/header %>

<div class = 'container'>
  <header class = 'jumbotron'>
    <div class = 'container'>
      <h1>Welcome to Yelp Camp!</h1>
      <p>View our wonderful campgrounds from all over the world</p>
      <a href = '/' class = 'btn btn-primary btn-lg'>< Home</a>
    </div>
  </header>
  <div class = 'row'>
    <% for (let i = 0; i < camps.length; i++) {%>
      <div class = 'col-md-3 col-sm-6'>
         <div class = thumbnail>
           <img src = <%= camps[i].image %>>
           <div class = 'caption text-center'>
             <p><%= camps[i].name %></p>
             <p> <a href = '/cgroundslist/<%= camps[i]._id %>'>More</a></p>
           </div>
         </div>;
      </div>
    <% } %>
  </div>
</div>

<% include ../partials/footer %>